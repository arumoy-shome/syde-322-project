<!DOCTYPE html>
<html>
  <head>
    <title>Tutorify</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if current_user %>
            <%= link_to "Tutorify", user_path(current_user), class: "navbar-brand" %>
          <% else %>
            <%= link_to "Tutorify", root_path, class: "navbar-brand" %>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <% if signed_in? %>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to "Find a Tutor", tutors_path %>
              </li>
              <li>
                <%= link_to "My Calenders", calendar_path %>
              </li>
              <li>
                <%= link_to("Sign Out", session_path, method: :delete, class: 'pull-right') %>
              </li>
          </div><!-- /.navbar-collapse -->
        <% end %>
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
