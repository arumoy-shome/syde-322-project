<h1>Create a new event</h1>

<%= form_for @event, url: {action: :create} do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, value: "Session #{@student.name}-#{@tutor.name}", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :event_date %>
    <%= f.date_field :event_date, value: Date.today, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :event_time %>
    <%= f.time_field :event_time, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :student %>
    <%= f.text_field :student, value: @student.name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :tutor %>
    <%= f.text_field :tutor, value: @tutor.name, class: "form-control"%>
  </div>

  <div class="form-group hidden">
    <%= f.label :student_id %>
    <%= f.number_field :student_id, value: @student.id, class: "form-control"%>
  </div>

  <div class="form-group hidden">
    <%= f.label :tutor_id %>
    <%= f.number_field :tutor_id, value: @tutor.id, class: "form-control"%>
  </div>

  <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>
